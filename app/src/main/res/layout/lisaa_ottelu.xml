<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/teamA"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:text="@string/TeamA"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/TeamB"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/TeamB"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/teamADropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="2" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="@string/SwapTeams"
            tools:text="SWAP" />

        <Spinner
            android:id="@+id/teamBDropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/BestOf"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="0.5"
            android:text="@string/BestOf"
            android:textAlignment="viewEnd" />

        <Spinner
            android:id="@+id/bestOfDropdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:entries="@array/bestOf" />
    </LinearLayout>

    <TextView
        android:id="@+id/CurrentTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickaava/Banniva tiimi"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/Action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ban/Pick + numero"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>